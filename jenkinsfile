pipeline {
    agent any

    parameters{
        string(name: 'Env', defaultValue: 'Test', description: 'environment to deploy')

        // text(name: 'BIOGRAPHY', defaultValue: '', description: 'Enter some information about the person')

        booleanParam(name: 'executeTests', defaultValue: true, description: 'decide to run tc')

        choice(name: 'APPVERSION', choices: ['1.1', '1.2', '1.3'])

       // password(name: 'PASSWORD', defaultValue: 'SECRET', description: 'Enter a password')
    }

    stages {
        stage('compile') {
            steps {
                script {
                    echo "complie the code"
                    echo "Compile in ${params.Env}"
                }
            }
        }
        stage('codereview') {
            steps {
                script {
                    echo "codereview done!"
                }
            }
        }
        stage('unittest') {
            when{
                expression{
                    params.executeTests == true
                }
            }
            steps {
                script {
                    echo "unittest done"
                }
            }
        }
        stage('codecoverage') {
            steps {
                script {
                    echo "codecoverage is there"
                }
            }
        }
        stage('package') {

            input{
                message "Select the platform for deployment"
                ok "Platform selected"
                parameters{
                    choice(name: 'Platform',choices:['EKS','EC2','On-prem'])
                }
            }



            steps {
                script {
                    echo "packaging the code"
                    echo "platform is ${params.Plaform}"
                    echo "packaging the version ${params.APPVERSION}"
                }
            }
        }
        stage('artifact') {
            steps {
                script {
                    echo "artifact"
                }
            }
        }
    }
}
